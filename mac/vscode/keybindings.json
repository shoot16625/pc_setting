// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
  {
    "key": "ctrl+u",
    "command": "editor.action.transformToUppercase",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+u",
    "command": "editor.action.transformToLowercase",
    "when": "editorTextFocus"
  },
  // Toggle between terminal and editor focus
  {
    "key": "cmd+9",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "cmd+9",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "alt+=",
    "command": "editor.action.revealDefinition"
  },
  {
    "key": "alt+-",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "alt+shift+-",
    "command": "workbench.action.navigateForward"
  },
  {
    "key": "alt+g",
    "command": "issue.copyGithubHeadLink"
  },
  {
    "key": "alt+shift+g",
    "command": "issue.copyGithubPermalink"
  },
  {
    "key": "alt+cmd+ctrl+n",
    "command": "explorer.newFile"
  },
  {
    "key": "alt+cmd+ctrl+shift+n",
    "command": "explorer.newFolder"
  },
  {
    "key": "alt+'",
    "command": "settings.cycle.copilot",
    "when": "editorFocus"
  },
  {
    "key": "alt+cmd+ctrl+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "shift+alt+p",
    "command": "-swagger.preview",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+0",
    "command": "-workbench.action.focusSideBar"
  },
  {
    "key": "ctrl+f12",
    "command": "editor.action.goToTypeDefinition"
  },
  {
    "key": "ctrl+alt+cmd+space",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
  },
  {
    "key": "ctrl+space",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
  },
  {
    "key": "ctrl+alt+cmd+f",
    "command": "search.action.focusSearchList"
  },
  {
    "key": "cmd+0",
    "command": "editor.emmet.action.matchTag"
  },
  {
    "key": "cmd+2",
    "command": "editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "f2",
    "command": "-editor.action.rename",
    "when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+0",
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+cmd+\\",
    "command": "-editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k l",
    "command": "editor.action.openLink"
  },
  {
    "key": "ctrl+alt+cmd+r",
    "command": "gitlens.copyRelativePathToClipboard"
  },
  {
    "key": "cmd+.",
    "command": "-editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
  },
  {
    "key": "cmd+.",
    "command": "center-cursor.setCursor",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+cmd+c",
    "command": "-center-cursor.setCursor",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+[",
    "command": "-editor.action.outdentLines",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+[",
    "command": "-markdown.extension.onOutdentLines",
    "when": "editorTextFocus && !suggestWidgetVisible && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  {
    "key": "cmd+[",
    "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    "when": "!activeEditorGroupEmpty"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    "when": "!activeEditorGroupEmpty"
  },
  {
    "key": "cmd+[",
    "command": "workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "shift+cmd+c",
    "command": "-workbench.action.terminal.openNativeConsole",
    "when": "!terminalFocus"
  }
]
